<Window x:Class="GS.Trade.Windows.ExceptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:windows="clr-namespace:GS.Trade.Windows"
        Title="Exceptions" Height="300"  Width="800"  Loaded="WindowLoaded" Closed="WindowClosed">
    <Window.Resources>
        <Style x:Key="AlternateStyle">
            <Setter Property="ListViewItem.Background" Value="#e1dfdc" />
        </Style>
    </Window.Resources>
    <Grid>
        <ListView Margin="0" Name="LstExceptions">
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Header="TimeDate" DisplayMemberBinding="{Binding Path=TimeDateString}" />
                        <GridViewColumn Header="Source" DisplayMemberBinding="{Binding Path=Source}" />
                        <GridViewColumn Header="ObjType" DisplayMemberBinding="{Binding Path=ObjType}" />
                        <GridViewColumn Header="Operation" DisplayMemberBinding="{Binding Path=Operation}" />
                        <GridViewColumn Header="Message" DisplayMemberBinding="{Binding Path=Message}" />
                        <GridViewColumn Header="ExcType" DisplayMemberBinding="{Binding Path=ExcType}" />
                        <GridViewColumn Header="ExcSource" DisplayMemberBinding="{Binding Path=SourceExc}" />
                        <GridViewColumn Header="TargetSite" DisplayMemberBinding="{Binding Path=TargetSite}" />
                        <GridViewColumn Header="StackTrace" DisplayMemberBinding="{Binding Path=StackTrace}" />
                        <GridViewColumn Header="Object" DisplayMemberBinding="{Binding Path=ObjStr}" />
                        <GridViewColumn Header="Key" DisplayMemberBinding="{Binding Path=Key}" />
                    </GridView.Columns>
                </GridView>
            </ListView.View>
            <ListView.ItemContainerStyleSelector>
                <windows:AlternatingRowStyleSelector AlternateStyle="{StaticResource AlternateStyle}" />
            </ListView.ItemContainerStyleSelector>
        </ListView>
    </Grid>
</Window>
