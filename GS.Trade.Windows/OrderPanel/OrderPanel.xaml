<Window x:Class="GS.Trade.Windows.OrderPanel.OrderPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OrderPanel" mc:Ignorable="d" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        d:DesignHeight="300" d:DesignWidth="300" SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>      
            <StackPanel Grid.Column="0">
            <Button Name="Buy">Buy</Button>
            <Button Name="BuyMarket">Market</Button>             
                <Button Name="BuyBid">Bid</Button>
                <Button Name="BuyOffer">Offer</Button>
                <Button Name="BuyAtr1">Atr</Button>
                <Button Name="BuyAtr2">2*Atr</Button> 
            </StackPanel>
        <StackPanel Grid.Column="1">
            <Button Name="Sell">Sell</Button>
                <Button Name="SellMarket">Market</Button>
                <Button Name="SellOffer">Offer</Button>
                <Button Name="SellBid">Bid</Button>  
                <Button Name="SellAtr1">Atr</Button>
                <Button Name="SellAtr2">2*Atr</Button>
            </StackPanel>
        <StackPanel Grid.Column="2">
            <Button Name="Cancel">Cancel</Button>
            <Button Name="CancelAll">All</Button>
            <Button Name="CancelAllBuy">All Buy's</Button>
            <Button Name="CancelAllSell">All Sell's</Button>
            <Button Name="CancelLast">Last</Button>
            <Button Name="CancelLastBuy">Last Buy</Button>
            <Button Name="CancelLastSell">Last Sell</Button>
        </StackPanel>
    </Grid>
</Window>
