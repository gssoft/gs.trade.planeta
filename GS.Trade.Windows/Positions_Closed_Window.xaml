<Window x:Class="GS.Trade.Windows.PositionsClosedWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:GS.Trade.Windows"
        Title="Positions Closed" Height="200" Width="1000" Loaded="WindowLoaded" Closed="WindowClosed">
    <Window.Resources>
        <Style x:Key="AlternateStyle">
            <Setter Property="ListViewItem.Background" Value="#e1dfdc" />
        </Style>
    </Window.Resources>
    <Grid>
        <ListView Margin="0" Name="lstPositionsClosed">
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Header="CloseTradeDT" DisplayMemberBinding="{Binding Path=LastTimeDateString}" />
                        <!--
                        <GridViewColumn Header="CloseTradeNumber" DisplayMemberBinding="{Binding Path=LastTradeNumber}" />                     
                        <GridViewColumn Header="Key" DisplayMemberBinding="{Binding Path=StrategyKey}" />
                        -->
                        <GridViewColumn Header="Account" DisplayMemberBinding="{Binding Path=Account}" />
                        <GridViewColumn Header="Strategy" DisplayMemberBinding="{Binding Path=Strategy}" />
                        <GridViewColumn Header="Ticker" DisplayMemberBinding="{Binding Path=TickerCode}" />
                        <!--
                        <GridViewColumn Header="Status" DisplayMemberBinding="{Binding Path=StatusString}" />
                        -->
                        <GridViewColumn Header="Position" DisplayMemberBinding="{Binding Path=OperationString}" />
                        <GridViewColumn Header="Quantity"  DisplayMemberBinding="{Binding Path=PositionString}" />
                        <GridViewColumn Header="Profit&amp;Loss" DisplayMemberBinding="{Binding Path=PnLString}" />
                        <GridViewColumn Header="OpenPrice" DisplayMemberBinding="{Binding Path=AvgPriceString}" />
                        <GridViewColumn Header="CLosePrice" DisplayMemberBinding="{Binding Path=LastTradePriceString}" />
                        <GridViewColumn Header="Amount" DisplayMemberBinding="{Binding Path=AmountString}" />
                        <GridViewColumn Header="Index" DisplayMemberBinding="{Binding Path=Index}" />
                        <GridViewColumn Header="OpenTradeNumber" DisplayMemberBinding="{Binding Path=FirstTradeNumber}" />
                        <GridViewColumn Header="CloseTradeNumber" DisplayMemberBinding="{Binding Path=LastTradeNumber}" />
                        <GridViewColumn Header="OpenTradeDT" DisplayMemberBinding="{Binding Path=FirstTradeDTString}" />
                        <GridViewColumn Header="CloseTradeDT" DisplayMemberBinding="{Binding Path=LastTradeDTString}" />
                        <GridViewColumn Header="Comment" DisplayMemberBinding="{Binding Path=Comment}" />
                    </GridView.Columns>
                </GridView>
            </ListView.View>

            <ListView.ItemContainerStyleSelector>
                <local:AlternatingRowStyleSelector AlternateStyle="{StaticResource AlternateStyle}" />
            </ListView.ItemContainerStyleSelector>

        </ListView>
        
    </Grid>
</Window>
