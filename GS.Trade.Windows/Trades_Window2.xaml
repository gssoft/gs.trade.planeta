<Window x:Class="GS.Trade.Windows.TradesWindow2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:windows="clr-namespace:GS.Trade.Windows"
        Title="Trades2" Height="300" Width="800"  Loaded="WindowLoaded" Closed="WindowClosed">
    <Window.Resources>
        <Style x:Key="AlternateStyle">
            <Setter Property="ListViewItem.Background" Value="#e1dfdc" />
        </Style>
    </Window.Resources>
    <Grid>
        <ListView Margin="0" Name="lstTrades">
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Header="DateTime" DisplayMemberBinding="{Binding Path=TimeDateString}" />
                        <GridViewColumn Header="Status" DisplayMemberBinding="{Binding Path=Status}" />
                        <GridViewColumn Header="Account" DisplayMemberBinding="{Binding Path=AccountCode}" />
                        <GridViewColumn Header="Strategy" DisplayMemberBinding="{Binding Path=StrategyCode}" />
                        <GridViewColumn Header="TimeInt" DisplayMemberBinding="{Binding Path=TimeInt}" />
                        <GridViewColumn Header="Ticker" DisplayMemberBinding="{Binding Path=TickerCode}" />
                        <GridViewColumn Header="Operation" DisplayMemberBinding="{Binding Path=Operation}" />
                        <GridViewColumn Header="Quantity" DisplayMemberBinding="{Binding Path=PositionString}" />
                        <GridViewColumn Header="Price" DisplayMemberBinding="{Binding Path=PriceString}" />
                        <GridViewColumn Header="Amount" DisplayMemberBinding="{Binding Path=AmountString}" />
                        <GridViewColumn Header="TradeNumber" DisplayMemberBinding="{Binding Path=Number}" />
                        <GridViewColumn Header="OrderNumber" DisplayMemberBinding="{Binding Path=OrderNumber}" />
                        <GridViewColumn Header="Elapsed" DisplayMemberBinding="{Binding Path=ElapsedAllStr}" />
                        <GridViewColumn Header="Comment" DisplayMemberBinding="{Binding Path=Comment}" />
                        <GridViewColumn Header="Mode" DisplayMemberBinding="{Binding Path=ModeString}" />

                    </GridView.Columns>
                </GridView>
            </ListView.View>
            <ListView.ItemContainerStyleSelector>
                <windows:AlternatingRowStyleSelector AlternateStyle="{StaticResource AlternateStyle}" />
            </ListView.ItemContainerStyleSelector>
        </ListView>
    </Grid>
</Window>
