<Window x:Class="Wpf_Test_TradeContext.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="500" Width="219.5" Loaded="WindowLoaded" Closed="WindowClosed" Closing="WindowClosing">
    <Grid>
        <TabControl>
            <TabItem Header="Start / Stop">
                <GroupBox Header="Группа элементов" Margin="5,5,5,-55" Padding="5">
                    <StackPanel>
                        <ToggleButton Name ="BtStartStop" Margin="5" Padding="5" Click="ToggleButtonClick" ClickMode="Press">Stopped</ToggleButton>

                        <Button Name="BtStart" Margin="5" Padding="5" Click="BtStartClick">Start</Button>
                        <Button Name="BtStop" Margin="5" Padding="5" Click="BtStopClick">Stop</Button>
                        <Button Name="BtReStart" Margin="5" Padding="5">Restart</Button>
                        <Button Name="BtSuspend" Margin="5" Padding="5" Click="BtSuspendClick">Suspend</Button>
                        <Button Name="BtResume" Margin="5" Padding="5" Click="BtResumeClick">Resume</Button>
                        <Button Name="BtClearOrders" Margin="5" Padding="5"
                                Click ="ClearOrders">Clear OrderCollection</Button>
                        <Button Name="BtCloseStrategies" Margin="5" Padding="5"
                                Click ="CloseStrategies">Close All Strategies</Button>
                        <ToggleButton Name ="TglBtnStrWorkingStatus" Margin="1" Click="TglBtnStrWorkingStatusClick" ClickMode="Press">Strategies Enabled Now</ToggleButton>
                        <Button Name="BtCloseApp" Margin="5" Padding="5" Click="BtCloseAppClick">Close Application</Button>
                    </StackPanel>
                </GroupBox>
            </TabItem>
            <!-- Используем нестандартное содержимое в заголовке TabItem -->
            <TabItem Header="Settings">
                <GroupBox Header="Elementa" Margin="5" Padding="5">
                    <StackPanel>
                        <CheckBox>Один</CheckBox>
                        <CheckBox Margin="0,5,0,5">Два</CheckBox>
                        <CheckBox>Три</CheckBox>
                        <Button HorizontalAlignment="Center" Padding="5">Ok</Button>
                        <Button HorizontalAlignment="Center" Padding="5">Ok</Button>
                    </StackPanel>
                </GroupBox>
            </TabItem>
            <TabItem Header="Info">
                
            </TabItem>
        </TabControl>
    </Grid>
</Window>
